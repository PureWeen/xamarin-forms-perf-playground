<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IoCPerformance.Views.MainView"
             Title="IoC Performance">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollView
                Grid.Row="0">
                <Label
                    Text="{Binding Output}"/>
            </ScrollView>
            <Button 
                Grid.Row="1"
                Text="Init Test"
                Command="{Binding InitTestCommand}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>